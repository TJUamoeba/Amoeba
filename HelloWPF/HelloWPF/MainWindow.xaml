<Window x:Class="HelloWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button FontWeight="Bold" RenderTransformOrigin="0.475,0.793" Margin="323,353,333.6,27" Click="Button_Click">
            <WrapPanel>
                <TextBlock Foreground="OrangeRed" FontSize="16">Display</TextBlock>
            </WrapPanel>
        </Button>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="72" Margin="209,105,207.6,223">
            Hello,WPF!
        </TextBlock>
        <RadioButton x:Name="HelloBut" Content="Hello" HorizontalAlignment="Left" Margin="209,311,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <RadioButton x:Name="ByeBut" Content="ByeBye" HorizontalAlignment="Left" Margin="507,314,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
