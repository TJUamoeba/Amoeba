<Window x:Class="HelloWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button FontWeight="Bold" Width="100" RenderTransformOrigin="0.475,0.793" Margin="13,350,346.6,30">
            <WrapPanel>
                <TextBlock Foreground="AliceBlue" FontSize="16">Hello</TextBlock>
                <TextBlock Foreground="DeepPink" FontSize="16">WPF</TextBlock>
            </WrapPanel>
        </Button>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="72">
            Hello,WPF!
        </TextBlock>

    </Grid>
</Window>
